<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
	<id value="DiseaseYPSD" />
	<url value="https://demis.rki.de/fhir/StructureDefinition/DiseaseYPSD" />
	<version value="1.0.0" />
	<name value="DiseaseYPSD" />
	<title value="Pest-Erkrankung" />
	<status value="active" />
	<date value="2023-01-30" />
	<description value="Die Erkrankung enthält klinische Informationen wie Diagnose, Behandlungsergebnis, usw. hinsichtlich Pest." />
	<fhirVersion value="4.0.1" />
	<mapping>
		<identity value="sct-concept" />
		<uri value="http://snomed.info/conceptdomain" />
		<name value="SNOMED CT Concept Domain Binding" />
	</mapping>
	<mapping>
		<identity value="sct-attr" />
		<uri value="http://snomed.org/attributebinding" />
		<name value="SNOMED CT Attribute Binding" />
	</mapping>
	<kind value="resource" />
	<abstract value="false" />
	<type value="Condition" />
	<baseDefinition value="https://demis.rki.de/fhir/StructureDefinition/Disease" />
	<derivation value="constraint" />
	<differential>
		<element id="Condition.code">
			<path value="Condition.code" />
			<short value="Meldetatbestand Pest" />
			<definition value="Bei Meldetatbestand Pest ist Condition.code.coding.code mit &quot;ypsd&quot; zu belegen." />
		</element>
		<element id="Condition.code.coding.system">
			<path value="Condition.code.coding.system" />
			<fixedUri value="https://demis.rki.de/fhir/CodeSystem/notificationDiseaseCategory" />
		</element>
		<element id="Condition.code.coding.code">
			<path value="Condition.code.coding.code" />
			<fixedCode value="ypsd" />
		</element>
		<element id="Condition.evidence">
			<path value="Condition.evidence" />
			<short value="Pest-Symptome und -Manifestationen" />
			<definition value="Der Wert muss als SNOMED-Code - entsprechend des vom RKI definierten und in regelmäßigen Abständen aktualisierten ValueSets (https://demis.rki.de/fhir/ValueSet/evidenceYPSD) – im code.coding Element dargestellt werden." />
		</element>
		<element id="Condition.evidence.code">
			<path value="Condition.evidence.code" />
			<min value="1" />
			<max value="1" />
		</element>
		<element id="Condition.evidence.code.coding">
			<path value="Condition.evidence.code.coding" />
			<min value="1" />
			<max value="1" />
			<binding>
				<strength value="extensible" />
				<description value="Pest-Symptome und -Manifestationen" />
				<valueSet value="https://demis.rki.de/fhir/ValueSet/evidenceYPSD" />
			</binding>
		</element>
		<element id="Condition.evidence.code.coding.system">
			<path value="Condition.evidence.code.coding.system" />
			<min value="1" />
		</element>
		<element id="Condition.evidence.code.coding.code">
			<path value="Condition.evidence.code.coding.code" />
			<min value="1" />
		</element>
	</differential>
</StructureDefinition>
