<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="DiseaseTRPD"/>
  <url value="https://demis.rki.de/fhir/StructureDefinition/DiseaseTRPD"/>
  <version value="1.0.1"/>
  <name value="DiseaseTRPD"/>
  <title value="Nichtnamentliche Ergänzung von Erkrankungsinformationen für Treponema pallidum"/>
  <status value="active"/>
  <date value="2025-08-12"/>
  <description value="Die Condition-Ressource DiseaseTRPD spezifiziert die zu ergänzenden Erkrankungsinformationen wie z.B. Symptome hinsichtlich Treponema pallidum."/>
  <fhirVersion value="4.0.1"/>
  <mapping>
    <identity value="sct-concept"/>
    <uri value="http://snomed.info/conceptdomain"/>
    <name value="SNOMED CT Concept Domain Binding"/>
  </mapping>
  <mapping>
    <identity value="sct-attr"/>
    <uri value="http://snomed.org/attributebinding"/>
    <name value="SNOMED CT Attribute Binding"/>
  </mapping>
  <kind value="resource"/>
  <abstract value="false"/>
  <type value="Condition"/>
  <baseDefinition value="https://demis.rki.de/fhir/StructureDefinition/DiseaseNonNominal"/>
  <derivation value="constraint"/>
  <differential>
    <element id="Condition.code">
      <path value="Condition.code"/>
      <short value="Meldetatbestand &quot;Treponema pallidum&quot;"/>
      <definition value="Bei Meldetatbestand &quot;Treponema pallidum&quot; ist Condition.code.coding.code mit &quot;trpd&quot; zu belegen."/>
    </element>
    <element id="Condition.code.coding.system">
      <path value="Condition.code.coding.system"/>
      <fixedUri value="https://demis.rki.de/fhir/CodeSystem/notificationDiseaseCategory"/>
    </element>
    <element id="Condition.code.coding.code">
      <path value="Condition.code.coding.code"/>
      <fixedCode value="trpd"/>
    </element>
    <element id="Condition.evidence">
      <path value="Condition.evidence"/>
      <short value="Symptome und Manifestationen in Bezug auf Treponema pallidum"/>
      <definition value="Der Wert muss als SNOMED-Code - entsprechend des vom RKI definierten und in regelmäßigen Abständen aktualisierten ValueSets (https://demis.rki.de/fhir/ValueSet/evidenceTRPD) – im code.coding Element dargestellt werden."/>
    </element>
    <element id="Condition.evidence.code">
      <path value="Condition.evidence.code"/>
      <min value="1"/>
      <max value="1"/>
    </element>
    <element id="Condition.evidence.code.coding">
      <path value="Condition.evidence.code.coding"/>
      <min value="1"/>
      <max value="1"/>
      <binding>
        <strength value="extensible"/>
        <description value="Symptome und Manifestationen in Bezug auf Treponema pallidum"/>
        <valueSet value="https://demis.rki.de/fhir/ValueSet/evidenceTRPD"/>
      </binding>
    </element>
    <element id="Condition.evidence.code.coding.system">
      <path value="Condition.evidence.code.coding.system"/>
      <min value="1"/>
    </element>
    <element id="Condition.evidence.code.coding.code">
      <path value="Condition.evidence.code.coding.code"/>
      <min value="1"/>
    </element>
  </differential>
</StructureDefinition>
